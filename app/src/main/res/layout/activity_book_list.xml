<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_marginVertical="3dp"
        android:layout_marginStart="5dp"
        android:contentDescription="Book Image"
        app:srcCompat="@drawable/add_24"
        tools:srcCompat="@drawable/add_24" />


    <TextView
        android:id="@+id/bookname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/favorite"
        android:layout_toEndOf="@+id/imageView"
        android:maxLines="2"
        android:text="bookName"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/favorite"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"

        />

    <ImageView
        android:id="@+id/iconlocation"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/bookname"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/imageView"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iconlocation"
        android:layout_alignBottom="@+id/iconlocation"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/iconlocation"
        android:gravity="bottom"
        android:maxLines="1"
        android:text="Karachi"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:text="price"
        android:textAlignment="gravity"
        android:textColor="@color/theme"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/imageView"
        android:maxLines="1"
        android:text="27-oct-2023"
        android:textSize="14sp" />

</RelativeLayout>
